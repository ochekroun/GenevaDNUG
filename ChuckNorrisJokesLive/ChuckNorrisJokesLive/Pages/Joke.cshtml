@page
@model ChuckNorrisJokesLive.Pages.JokeModel
@{
    ViewData["Title"] = "Joke";
}

<h2>Joke</h2>

<p>Chuck Norris joke sent by Azure: <strong><span id="joke">Waiting to start...</span></strong></p>

@section Scripts
    {
    <script src="~/lib/signalr/dist/browser/signalr.js"></script>
    <script>
        var connection = new signalR.HubConnectionBuilder().withUrl("/chucknorrisjokehub").build();

        connection.on("ReceiveJoke",
            function (joke) {
                var json = JSON.parse(joke);
                document.getElementById("joke").innerHTML = json.value;
            });

        connection.start().catch(function (err) {
            return console.error(err.toString());
        });


    </script>
}
